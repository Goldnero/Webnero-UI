{% macro card(coin) %}
<div class="panel panel-{{ coin }}">
    <div class="panel-heading">
        <div class="row">
            <div class="col-xs-3">
                <img height="70px" width="70px" src="img/{{ coin }}.png" />
            </div>
            {% block css %}
            <link rel="stylesheet" href="css/card.css" />
            {% endblock %}
            <div class="col-xs-9 text-right">
                <div id="{{ coin }}-balance" class="huge align"></div>
                <div class="align">CRFI Balance</div>
            </div>
        </div>
    </div>
    <div class="panel-footer">
        <span class="pull-left">CRFI Unlocked Balance</span>
        <span id="{{ coin }}-unlocked-balance" class="pull-right align"></span>
        <span id="{{ coin }}-usdt-balance" class="pull-left align"></span> USDt
        <span id="{{ coin }}-btc-balance" class="pull-left align"></span> BTC
        <div class="clearfix"></div>
    </div>                       
</div>

{% endmacro %}
