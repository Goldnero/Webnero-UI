{% macro card(coin) %}
<div class="panel panel-{{ coin }}">
    <div class="panel-heading">
        <div class="row">
            <div class="col-xs-3">
                <img height="70px" width="70px" src="img/{{ coin }}.png" />
            </div>
            {% block css %}
            <link rel="stylesheet" href="css/card.css" />
            {% endblock %}
            <div class="col-xs-9 text-right">
                <div id="{{ coin }}-balance" class="huge align"></div>
                <div class="align">CRFI Balance</div>
            </div>
        </div>
    </div>
    <div class="panel-footer">; 
        <div class="pull-right">
        <span class="align">CRFI Unlocked Balance:         
        <span class="align" id="{{ coin }}-unlocked-balance"></span></span>  
        </br>
        <span class="align" id="{{ coin }}-usdt-balance"></span>
        </br>
        <span class="align" id="{{ coin }}-btc-balance"></span>
        </div>
        
        <div class="clearfix"></div>
    </div>                       
</div>

{% endmacro %}
