{% macro card(coin) %}
<div class="panel panel-{{ coin }}">
    <div class="panel-heading">
        <div class="row">
            <div class="col-xs-3">
                <img height="70px" width="70px" src="img/{{ coin }}.png" />
            </div>
            {% block css %}
            <link rel="stylesheet" href="css/card.css" />
            {% endblock %}
            <div class="col-xs-9 text-right">
                <div id="{{ coin }}-balance" class="huge align"></div>
                <div class="align">CRFI Vault Balance</div>
            </div>
        </div>
    </div>
    <div class="panel-footer">
        <div class="col-xs-12 pull-right">
        <span class="align">CRFI Unlocked: <span id="{{ coin }}-unlocked-balance"></span></span>  
        </br>
        <span class="align">USDt Value: <span id="{{ coin }}-usdt-balance"></span></span> 
        </br>
        <span class="align">BTC Value: <span id="{{ coin }}-btc-balance"></span></span>
        </br>
        <span class="align">ETH Value: <span id="{{ coin }}-eth-balance"></span></span>
        </br>
        <span class="align">LTC Value: <span id="{{ coin }}-ltc-balance"></span></span>
        </br>
        </br>
        </div>   
        
        <div class="clearfix"></div>
    </div>                       
</div>

{% endmacro %}
