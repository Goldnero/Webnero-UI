{% macro card(coin) %}
<div class="panel panel-{{ coin }}">
    <div class="panel-heading">
        <div class="row">
            <div class="col-xs-3 col-lg-3 col-md-3">
                <img height="70px" width="70px" src="../img/{{ coin }}.png" />
            </div>
            <div class="col-xs-3 col-lg-3 col-md-3" id="status-area"></div>
            {% block css %}
            <link rel="stylesheet" href="../css/card.css" />
            {% endblock %}
            <div class="col-xs-4 col-lg-4 col-md-4 text-right">
                <div id="{{ coin }}-balance" class="huge align indexedalign"></div>
                <div class="align">CRFI Vault Balance</div>
            </div>
        </div>
        
        <div class="clearfix"></div>
    </div>
    <div class="panel-footer">
        <div class="col-xs-12">
        <span>CRFI Unlocked: <span id="{{ coin }}-unlocked-balance"></span></span>  
        </br>
        <span>USDt: <span id="{{ coin }}-usdt-balance"></span></span> 
        </br>
        <span>BTC: <span id="{{ coin }}-btc-balance"></span></span>
        </br>
        <span>ETH: <span id="{{ coin }}-eth-balance"></span></span>
        </br>
        <span>LTC: <span id="{{ coin }}-ltc-balance"></span></span>
        </br>
        </div>   
        
        <div class="clearfix"></div>
    </div>                       
</div>

{% endmacro %}
