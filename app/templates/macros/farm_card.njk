{% macro card(farm_card) %}
<div class="">
    <div class="">
        <div class="row">
            <div class="col-xs-3 col-lg-3 col-md-3">
            <img height="70px" width="70px" src="../img/{{ coin }}.png" />
            </div>
            {% block css %}
            <link rel="stylesheet" href="../css/card.css" />
            {% endblock %}
            <div class="col-xs-9 col-lg-9 col-md-9">
                <div id="{{ coin }}-balance" class="huge align indexedalign text-right"></div>
                <div class="align text-right">CRFI Farm Balance</div>
            </div>
        </div>        
        <div class="clearfix"></div>
    </div>
    <div class="">
        <div class="col-xs-12">
        <span>CRFI Yield: <span id="{{ coin }}-unlocked-balance"></span></span>  
        </br>
        <span>USDt Liquidity: <span id="{{ coin }}-usdt-balance"></span></span> 
        </br>
        <span>BTC Liquidity: <span id="{{ coin }}-btc-balance"></span></span>
        </br>
        <span>ETH Liquidity: <span id="{{ coin }}-eth-balance"></span></span>
        </br>
        <span>LTC Liquidity: <span id="{{ coin }}-ltc-balance"></span></span>
        </br>
        <span>DAI Liquidity: <span id="{{ coin }}-dai-balance"></span></span>
        </br>
        </div>   
        
        <div class="clearfix"></div>
    </div>                       
</div>

{% endmacro %}
