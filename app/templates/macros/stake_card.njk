{% macro card(coin, stake_card) %}
<div class="panel panel-{{ coin }}">
    <div class="panel-heading">
        <div class="row">
            <div class="col-xs-3 col-lg-3 col-md-3">
            <img height="70px" width="70px" src="../img/{{ coin }}.png" />
            </div>
            {% block css %}
            <link rel="stylesheet" href="../css/card.css" />
            {% endblock %}
            <div class="col-xs-9 col-lg-9 col-md-9">
                <div id="{{ coin }}-balance" class="huge align indexedalign text-right"></div>
                <div class="align text-right">CRFI Stake Balance</div>
            </div>
        </div>        
        <div class="clearfix"></div>
    </div>
    <div class="panel-footer">
        <div class="col-xs-12">
        
        <div class="text-left"><svg class="liquid-button"
             data-text="STAKE"
             data-force-factor="0.1"
             data-layer-1-viscosity="0.5"
             data-layer-2-viscosity="0.4"
             data-layer-1-mouse-force="400"
             data-layer-2-mouse-force="500"
             data-layer-1-force-limit="1"
             data-layer-2-force-limit="2"
             data-color1="#FFF500"
             data-color2="#20D8F9"
             data-color3="#20D8F9">
        </svg></div>
        <div class="text-left"><svg class="liquid-button"
             data-text="CLAIM"
             data-force-factor="0.1"
             data-layer-1-viscosity="0.5"
             data-layer-2-viscosity="0.4"
             data-layer-1-mouse-force="400"
             data-layer-2-mouse-force="500"
             data-layer-1-force-limit="1"
             data-layer-2-force-limit="2"
             data-color1="#FFF500"
             data-color2="#20D8F9"
             data-color3="#20D8F9">
        </svg></div>
        <span class="text-left">CRFI Unlocked: <span class="{{ coin }}-unlocked-balance"></span></span>  
        </div>   
        
        <div class="clearfix"></div>
    </div>                       
</div>

{% endmacro %}
