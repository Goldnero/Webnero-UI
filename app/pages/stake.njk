<!-- index.njk -->
{% extends "layout.njk" %}

{% block content %}
      <div id="wrapper">

        {% include "../templates/navigation.njk" %}

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12 col-md-12 item">
                    {% import "../templates/macros/coin_card.njk" as crfi %}
                    {{ crfi.card('crfi') }}
                </div>
            </div>
              
            
                        
            <div class="row">
                <div class="col-lg-12">
                    <div class="stake-panel stake panel panel-crfi">
                        <div class="panel-heading">
                            <i class="fa fa-clock-o fa-fw"></i> Bake Crystaleum
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="staking-type false active" data-stakekey="bake_tezos">
                                        <h4 style="margin-bottom: var(--space);">Bake CRFI</h4>
                                        <section class="stake-stat"><span class="name">Annual Reward: </span><span class="annual_value"></span></section>
                                        <section class="stake-stat"><span class="name">Adj. Reward: </span><span class="est_reward_value" data-negative="false"></span></section>
                                        <section class="stake-stat"><span class="name">Required collateral:</span><span class="collateral_value"></span></section>
                                        <section class="stake-stat"><span class="name">Lock-Up Period: </span><span class="lock_value"></span></section>
                                        <section class="stake-stat">
                                        <span class="name">Complexity Rating: </span><span class="complexity_value"></span></section>
                                        <section class="stake-stat"><span class="name">Risk Rating: </span><span class="risk_value"></span></section></div>
                                </div>
                                <div class="form-group col-lg-6" style="text-align: center">
                                    
                                        <button id="crfi-stake" class="btn btn-lg btn-login coin-selector {{ "btn-selected" if coin === 'crfi' }}">
                                            <img height="70px" width="70px" src="img/crfi.png" />
                                        </button>
                                   
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
                    </div>
                </div>
            </div>
                            <div class="row">
                              <div role="form">
                                <div class="col-lg-3">
                                        <label>Baking Supply</label>
                                      <div class="form-group input-group">
                                          <input id="amount" type="number" class="form-control" placeholder="0.001">
                                          <span class="input-group-addon" id="stake-all">
                                          All</span>
                                      </div>
                                </div>
                                <div class="col-lg-3">
                                        <label>Bake Percentage</label>
                                        </br>
                                        <button id="25_percent" type="button" class="btn btn-default" value="25">25%</button>
                                        <button id="50_percent" type="button" class="btn btn-default" value="50">50%</button>
                                        <button id="75_percent" type="button" class="btn btn-default" value="75">75%</button>
                                        <button id="100_percent" type="button" class="btn btn-default" value="100">100%</button>
                                </div>
                                <div class="col-lg-6">
                                        <label>Bake Time</label>
                                        <select id="interval" class="form-control">
                                          <option value="3">Quarterly (1 day) x0.05% daily yield</option>
                                          <option value="3">Quarterly (1 months) x0.5% daily yield</option>
                                          <option value="3">Quarterly (3 months) x5% daily yield</option>
                                          <option value="6">Bi-Annual (6 months) x10% daily yield</option>
                                          <option value="12">Annual (12 months) x25% daily yield</option>
                                        </select>
                                    </div>
                                </div> 
                            </div>
                            <div class="row">
                              <div role="form">
                                 <div class="col-lg-6">
                                        <div class="form-group">
                                            <label>CRFI Stake Reward Address</label>
                                            <input id="receiver" class="form-control" placeholder="CRFI address...">
                                        </div>
                                 </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Payment ID (optional)</label>
                                        <input id="pid" class="form-control" placeholder="16 or 64 hexadecimal characters">
                                    </div>
                                  </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="form-group" style="text-align: center">
                                    <button id="stake-modal" class="btn btn-lg btn-login btn-primary" style="width: 100px"> Stake </button>
                                    <button class="btn btn-lg btn-login btn-primary" style="width: 100px"> Cancel </button>
                                </div>
                            </div>

        </div> 


        {% include "../templates/modals/spinner.njk" %}
    </div>

                  


{% endblock %}

{% block scripts %} 
    <script type="text/javascript" src="plugins/metisMenu/metisMenu.min.js"></script>
    <script type="text/javascript" src="dist/js/pin-code-utils.js"></script>
    <script type="text/javascript" src="dist/js/stake.js"></script>
{% endblock %}
