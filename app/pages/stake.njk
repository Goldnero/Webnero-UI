<!-- index.njk -->
{% extends "layout.njk" %}

{% block content %}
      <div id="wrapper">

        {% include "../templates/navigation.njk" %}

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12 col-md-12 item">
                    {% import "../templates/macros/coin_card.njk" as crfi %}
                    {{ crfi.card('crfi') }}
                </div>
            </div>
              
            <div class="row">
                <div class="col-lg-12">
                    <div class="stake-panel stake panel panel-crfi">
                        <div class="panel-heading">
                            <i class="fa fa-clock-o fa-fw"></i> Stake coin
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="form-group" style="text-align: center">
                                    
                                        <button id="crfi-stake" class="btn btn-lg btn-login coin-selector {{ "btn-selected" if coin === 'crfi' }}">
                                            <img height="70px" width="70px" src="img/crfi.png" />
                                        </button>
                                    
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div role="form">
                                        <label>Stake Amount</label>
                                        <div class="form-group input-group">
                                            <input id="amount" type="number" class="form-control">
                                            <span class="input-group-addon" id="stake-all">
                                            All</span>
                                        </div>
                                        <div class="form-group">
                                            <label>CRFI Stake Reward Address</label>
                                            <input id="receiver" class="form-control" placeholder="CRFI address...">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Stake Interval</label>
                                        <select id="interval" class="form-control">
                                          <option value="3">Quarterly (3 months)</option>
                                          <option value="6">Bi-Annual (6 months)</option>
                                          <option value="12">Annual (12 months)</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Payment ID (optional)</label>
                                        <input id="pid" class="form-control" placeholder="16 or 64 hexadecimal characters">
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label>USDT bridge</label>
                                        <input id="usdt-address" class="form-control" placeholder="USDT address">
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label>BTC bridge</label>
                                        <input id="btc-address" class="form-control" placeholder="BTC address">
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label>ETH bridge</label>
                                        <input id="eth-address" class="form-control" placeholder="ETH address">
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label>LTC bridge</label>
                                        <input id="ltc-address" class="form-control" placeholder="LTC address">
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="form-group" style="text-align: center">
                                    <button id="stake-modal" class="btn btn-lg btn-login btn-primary" style="width: 100px"> Stake </button>
                                    <button class="btn btn-lg btn-login btn-primary" style="width: 100px"> Cancel </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                  

        </div> 


        {% include "../templates/modals/spinner.njk" %}
    </div>

                  


{% endblock %}

{% block scripts %} 
    <script type="text/javascript" src="plugins/metisMenu/metisMenu.min.js"></script>
    <script type="text/javascript" src="dist/js/pin-code-utils.js"></script>
    <script type="text/javascript" src="dist/js/stake.js"></script>
{% endblock %}
