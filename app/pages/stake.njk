<!-- index.njk -->
{% extends "layout.njk" %}

{% block content %}
      <div id="wrapper">

        {% include "../templates/navigation.njk" %}

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-4 col-md-12 item">
                  {% block css %}
                  <link rel="stylesheet" href="../css/card_index.css" />
                  {% endblock %}
                    {% import "../templates/macros/coin_card.njk" as crfi %}
                    {{ crfi.card('crfi') }}
                </div>
                <div class="col-lg-4 col-md-12 item">
                    {% import "../templates/macros/stake_card.njk" as stake_card %}
                    {{ stake_card.card('crfi') }}
                </div>
            </div>
              
            
                        
            <div class="row">
                <div class="col-lg-12">
                    <div class="stake-panel stake panel panel-crfi">
                        <div class="panel-heading">
                            <i class="fa fa-clock-o fa-fw"></i> Bake Crystaleum
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="staking-type false active" data-stakekey="bake_tezos">
                                        <h4 style="margin-bottom: var(--space);">Bake CRFI</h4>
                                        <section class="stake-stat"><span class="name">Network Fee: </span><span id="est_performance_value" data-negative="false"></span></section>
                                        <section class="stake-stat"><span class="name">Collateral: </span><span id="collateral_value"></span></section>
                                        <section class="stake-stat"><span class="name">Mint: </span><span id="est_reward_value" data-negative="false"></span></section>
                                        <section class="stake-stat"><span class="name">Gross Yield: </span><span id="quoted_value"></span></section>
                                        <section class="stake-stat"><span class="name">Net Yield: </span><span id="est_return_value" data-negative="false"></span></section>
                                        <section class="stake-stat"><span class="name">Lock-Up Period: </span><span id="lock_value"></span></section>
                                    </div>
                                </div>
                                <div class="form-group col-lg-8" style="text-align: center">
                                    
                                        <button id="crfi-stake" class="btn btn-lg btn-login coin-selector {{ "btn-selected" if coin === 'crfi' }}">
                                            <img height="70px" width="70px" src="../img/crfi.png" />
                                        </button>
                                   
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
                            <div class="row">
                              <div role="form">
                                <div class="col-lg-3">
                                        <label>Baking Supply</label>
                                      <div class="form-group input-group">
                                          <input id="amount" type="number" class="form-control" placeholder="0.001">
                                          <span class="input-group-addon" id="stake-all">
                                          All</span>
                                      </div>
                                </div>
                                <div class="col-lg-3">
                                        <label>Bake Percentage</label>
                                        </br>
                                        <button id="25_percent" type="button" class="btn btn-default" value="25">25%</button>
                                        <button id="50_percent" type="button" class="btn btn-default" value="50">50%</button>
                                        <button id="75_percent" type="button" class="btn btn-default" value="75">75%</button>
                                        <button id="100_percent" type="button" class="btn btn-default" value="100">100%</button>
                                </div>
                                <div class="col-lg-6">
                                        <label>Bake Time</label>
                                        <select id="interval" class="form-control">
                                          <option value="10.0">Daily (1 day) x10% yield</option>
                                          <option value="20.0">Weekly (1 week) x20% yield</option>
                                          <option value="33.0">Monthly (1 month) x33% yield</option>
                                          <option value="38.0">Quarterly (3 months) x38% yield</option>
                                          <option value="40.0">Bi-Annual (6 months) x40% yield</option>
                                          <option id="default_oven" selected="selected" value="50.0">Annual (12 months) x50% yield</option>
                                        </select>
                                    </div>
                                </div> 
                            </div>
                            <div class="row">
                              <div role="form">
                                 <div class="col-lg-6">
                                        <div class="form-group">
                                            <label>Baking Yield Address</label>
                                            <input id="receiver" class="form-control" placeholder="CRFI address...">
                                        </div>
                                 </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Payment ID (optional)</label>
                                        <input id="pid" class="form-control" placeholder="16 or 64 hexadecimal characters">
                                    </div>
                                  </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="form-group" style="text-align: center">
                                    <button id="quote-stake" class="btn btn-lg btn-login btn-primary" style="width: 100px"> Quote </button>
                                    <button id="stake-modal" class="btn btn-lg btn-login btn-primary" style="width: 100px"> Stake </button>
                                    <button id="cancel" class="btn btn-lg btn-login btn-primary" style="width: 100px"> Cancel </button>
                                </div>
                            </div>

        </div> 
      

        {% include "../templates/modals/pincode.njk" %}
        
        {% include "../templates/modals/spinner.njk" %}
        
        {% include "../templates/modals/send_success.njk" %}
        
        {% include "../templates/modals/fail_modal.njk" %}
    </div>

                  


{% endblock %}

{% block scripts %} 
    <script type="text/javascript" src="../plugins/metisMenu/metisMenu.min.js"></script>
    <script type="text/javascript" src="../dist/js/pin-code-utils.js"></script>
    <script type="text/javascript" src="../dist/js/stake.js?v=3033"></script>
{% endblock %}
