<!-- index.njk -->
{% extends "layout.njk" %}

{% block content %}
      <div id="wrapper">

        {% include "../templates/navigation.njk" %}

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-4 col-md-12 item">
                    {% import "../templates/macros/coin_card.njk" as crfi %}
                    {{ crfi.card('crfi') }}
                </div>
                <div class="col-lg-4 col-md-12 item">
                    {% import "../templates/macros/stake_card.njk" as crfi_stake %}
                    {{ crfi_stake.card('crfi') }}
                </div>
                <div class="col-lg-4 col-md-12 item">
                    {% import "../templates/macros/farm_card.njk" as crfi_farm %}
                    {{ crfi_farm.card('crfi') }}
                </div>
            </div>

            <div class="row">
            <div class="col-lg-12">
        <script src="https://widgets.coingecko.com/coingecko-coin-converter-widget.js"></script>
<coingecko-coin-converter-widget  coin-id="crystaleum" currency="usd" background-color="#ffffff" font-color="#4c4c4c" locale="en"></coingecko-coin-converter-widget>
        <span align="center">CryptoCurrency Conversion Powered in part by <a href="https://www.coingecko.com/en/coins/crystaleum">CoinGecko</a></span>
        </div>
                <div class="col-lg-12">
                    <div class="panel panel-crfi">
                        <div class="panel-heading">
                            <i class="fa fa-clock-o fa-fw"></i> Your wallets
                        </div>
                       <div class="panel-body">
                            {% import "../templates/macros/coin_addrqr.njk" as crfi %}
                            {{ crfi.addrqr('crfi') }}
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {% include "../templates/modals/spinner.njk" %}
    </div>


{% endblock %}

{% block scripts %} 
    <script type="text/javascript" src="../plugins/metisMenu/metisMenu.min.js"></script>
    <script type="text/javascript" src="../plugins/qrious/qrious.js"></script>
    <script type="text/javascript" src="../dist/js/qr-gen.js"></script>
    <script type="text/javascript" src="../dist/js/index.js?v=2027"></script>
{% endblock %}
